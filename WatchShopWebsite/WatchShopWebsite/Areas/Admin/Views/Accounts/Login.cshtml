@model WatchShopWebsite.Models.EF.NhanVien

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Areas/Admin/Views/Shared/_SettingLayout.cshtml";
}

<div class="col-lg-5">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-header"><h3 class="text-center fw-light my-4">Đăng Nhập</h3></div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <form>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="TenDangNhap" name="TenDangNhap" type="text" placeholder="Tên Đăng Nhập" />
                        <label for="TenDangNhap">Tên Đăng Nhập</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="Email" name="Email" type="text" placeholder="Email" />
                        <label for="Email">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="MatKhau" name="MatKhau" type="password" placeholder="Mật Khẩu" />
                        <label for="MatKhau">Mật Khẩu</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                        <label class="form-check-label" for="inputRememberPassword">Ghi nhớ tôi</label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="">Bạn quên mật khẩu?</a>
                        <input type="submit" value="Đăng Nhập" class="btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small"><a href="/Admin/Accounts/Signup">Bạn chưa có tài khoản? Đăng ký!</a></div>
            </div>
        }
    </div>
</div>
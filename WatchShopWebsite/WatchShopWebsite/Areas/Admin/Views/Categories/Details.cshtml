@model WatchShopWebsite.Models.EF.DanhMuc

@{
    ViewBag.Title = "Chi Tiết Danh Mục Đồng Hồ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chi Tiết Thông Tin Danh Mục</h2>
            <hr />
            @Html.HiddenFor(model => model.MaDM)

            <div class="form-group">
                <label class="form-label fw-bold">Tên Danh Mục</label>
                <div class="col-md-12">
                    <input type="text" class="form-control bg-white" id="TenDM" name="TenDM" readonly value="@Model.TenDM" />
                </div>
            </div>

            <div class="form-group mt-3">
                <label class="form-label fw-bold">Trạng Thái</label>
                <div class="col-md-12">
                    @{
                        var getStatus = Model.TrangThai == 0 ? "Ẩn" : "Hiển thị";
                    }
                    <input type="text" class="form-control bg-white" id="TrangThai" name="TrangThai" readonly value="@getStatus" />
                </div>
            </div>

            <div class="form-group text-center mt-3">
                @Html.ActionLink("Sửa", "Edit", new { id = Model.MaDM }, new { @class = "btn btn-sm btn-warning" })
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary" })
            </div>
        </div>
    </div>
}
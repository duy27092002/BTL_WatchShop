@model WatchShopWebsite.Models.EF.VaiTro

@{
    ViewBag.Title = "Xóa Vai Trò";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Bạn có thực sự muốn xóa không?</h2>
            <hr />
            @Html.HiddenFor(model => model.MaVaiTro)

            <div class="form-group">
                <label class="form-label fw-bold">Tên Vai Trò</label>
                <div class="col-md-12">
                    <input type="text" class="form-control bg-white" id="TenVaiTro" name="TenVaiTro" readonly value="@Model.TenVaiTro" />
                </div>
            </div>

            <div class="form-group mt-3">
                <label class="form-label fw-bold">Trạng Thái</label>
                <div class="col-md-12">
                    @{
                        var getStatus = Model.TrangThai == 0 ? "Ẩn" : "Hiển thị";
                    }
                    <input type="text" class="form-control bg-white" id="TrangThai" name="TrangThai" readonly value="@getStatus" />
                </div>
            </div>

            <div class="form-group text-center mt-3">
                <input type="submit" value="Xóa" class="btn btn-sm btn-danger" />
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary" })
            </div>
        </div>
    </div>
}
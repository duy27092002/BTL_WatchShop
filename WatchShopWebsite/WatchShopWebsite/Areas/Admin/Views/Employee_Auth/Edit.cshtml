@model WatchShopWebsite.Models.EF.NhanVien_VaiTro

@{
    ViewBag.Title = "Sửa Phân Quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chỉnh Sửa Phân Quyền</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="row">
                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">Tên Vai Trò</label>
                    <div class="col-md-12">
                        @Html.DropDownList("MaVaiTro", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaVaiTro, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">Mã Nhân Viên</label>
                    <div class="col-md-12">
                        @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <label class="form-label fw-bold">Trạng Thái</label>
                <div class="col-md-12">
                    <select class="form-control" id="TrangThai" name="TrangThai">
                        @{
                            if (Model.TrangThai == 0)
                            {
                                <option value="0" selected>Ẩn</option>
                                <option value="1">Hiển thị</option>
                            }
                            else
                            {
                                <option value="0">Ẩn</option>
                                <option value="1" selected>Hiển thị</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center mt-3">
                <input type="submit" value="Cập Nhật" class="btn btn-sm btn-warning" />
                <a class="btn btn-sm btn-secondary" onclick="window.history.go(-1); return false;">Quay Lại</a>
            </div>
        </div>
    </div>
}
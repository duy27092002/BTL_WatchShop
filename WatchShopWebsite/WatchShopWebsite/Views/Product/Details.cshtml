@model WatchShopWebsite.Models.EF.SanPham

@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .readLess {
        height: 500px;
        overflow: hidden;
    }

    .checked {
        color: orange;
    }

    .not-checked {
        color: darkgray;
    }
</style>

<script type="text/javascript">
    $(function () {
        $("#addtocart").click(function () {
            var model = {};
            //lấy id sản phẩm
            model.Id = @Model.MaSP;
            // lấy số lượng đặt hàng
            model.Quantity = $("#quantity").val();

            $.ajax({
                type: "POST",
                url: "/Cart/AddToCart/",
                data:  JSON.stringify(model) ,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function () {
                    swal("Thêm giỏ hàng thành công!", "", "success");
                    $('#CartCount').text(@Session["count"] + 1);
                },
                error: function () {
                    swal("Lỗi trong khi thêm vào giỏ hàng!", "", "error");
                }
            });
            return false;
        });
    });
</script>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg-white padding-y mt-3">
    <div class="container">
        <!-- ============================ ITEM DETAIL ======================== -->
        <div class="row">
            @Html.HiddenFor(model => model.MaSP)
            @Html.HiddenFor(model => model.SoLuong)
            <aside class="col-md-6">
                <div class="card">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div>
                                <a href="#">
                                    @if (Model.HinhAnh != null)
                                    {
                                        var getUrlImg = Model.HinhAnh.ToString().Replace("~", "../../..");
                                        <img src="@getUrlImg" class="img-fluid" alt="@Model.TenSP" />
                                    }
                                </a>
                            </div>
                        </div> <!-- slider-product.// -->
                    </article> <!-- gallery-wrap .end// -->
                </div> <!-- card.// -->
            </aside>
            <main class="col-md-6">
                <article class="product-info-aside">
                    <h2 class="title mt-3">@Model.TenSP </h2>
                    <div class="rating-wrap my-3">
                        @if (ViewBag.GetAverage != 0)
                        {
                            for (var i = 0; i < ViewBag.GetAverage; i++)
                            {
                                <span class="fa fa-star checked"></span>
                            }

                            for (var j = 0; j < 5 - ViewBag.GetAverage; j++)
                            {
                                <span class="fa fa-star not-checked"></span>
                            }
                        }
                        else
                        {
                            <small class="label-rating text-muted">Sản phẩm chưa xếp hạng</small>
                        }
                        <small class="label-rating text-muted">@String.Format("{0:0,0}", ViewBag.GetEvaluate) bài đánh giá</small>
                        <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> @String.Format("{0:0,0}", ViewBag.GetOrdered) đơn đặt hàng </small>
                    </div> <!-- rating-wrap.// -->
                    <div class="mb-3">
                        <var class="price h4">@String.Format("{0:0,0}", Model.Gia) VNĐ</var>
                    </div> <!-- price-detail-wrap .// -->
                    <p>@Model.MoTa</p>
                    <dl class="row">
                        <dt class="col-sm-3">Nhà sản xuất</dt>
                        <dd class="col-sm-9"><a href="#">@Model.NhaSanXuat.TenNSX.</a></dd>
                        <dt class="col-sm-3">Bảo hành</dt>
                        <dd class="col-sm-9">2 năm</dd>
                        <dt class="col-sm-3">Thời gian giao hàng</dt>
                        <dd class="col-sm-9">3-4 ngày</dd>
                    </dl>
                    <div class="form-row  mt-4">
                        <div class="form-group col-md flex-grow-0">
                            <div class="input-group mb-3 input-spinner">
                                <div class="input-group-prepend">
                                    <button class="btn btn-light" type="button" id="button-plus"> + </button>
                                </div>
                                <input type="text" id="quantity" name="quantity" class="form-control bg-white" value="1" readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-light" type="button" id="button-minus"> &minus; </button>
                                </div>
                            </div>
                        </div> <!-- col.// -->
                        <div class="form-group col-md">
                            <a href="#" class="btn btn-primary" id="addtocart">
                                <i class="fas fa-shopping-cart"></i> <span class="text">Thêm vào giỏ hàng</span>
                            </a>
                            <a href="#" class="btn btn-light">
                                <i class="fas fa-envelope"></i> <span class="text">Liên hệ nhà cung cấp</span>
                            </a>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->

                </article> <!-- product-info-aside .// -->
            </main> <!-- col.// -->
        </div> <!-- row.// -->
        <!-- ================ ITEM DETAIL END .// ================= -->
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

<!-- ========================= SECTION  ========================= -->
<section class="section-name padding-y bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="box">
                    <h5 class="title-description mb-3">Chi tiết sản phẩm</h5>
                    <div class="my-3">
                        <div class="content-box readLess">
                            <div class="content">
                                @Html.Raw(Model.ChiTietSP)
                            </div>
                        </div>
                        <p class="text-center mt-3">
                            <input type="hidden" class="btn btn-outline-warning" readonly id="btn-read-more" value="Xem thêm nội dung" />
                        </p>
                    </div>
                </div>
            </div> <!-- col.// -->
            <aside class="col-md-4">
                <div class="box">
                    <h5 class="title-description mb-3">Sản phẩm cùng loại</h5>
                    @foreach (var smp in ViewBag.SimilarPros)
                    {
                        <article class="media mb-3">
                            <a href="/Product/Details/@smp.MaSP">
                                @if (smp.HinhAnh != null)
                                {
                                    var getUrlImg = smp.HinhAnh.ToString().Replace("~", "../../..");
                                    <img src="@getUrlImg" class="img-fluid img-sm mr-3" alt="@smp.TenSP" />
                                }
                            </a>
                            <div class="media-body">
                                <h6 class="mt-0"><a href="/Product/Details/@smp.MaSP">@smp.TenSP</a></h6>
                                <p>@String.Format("{0:0,0}", smp.Gia) VNĐ</p>
                            </div>
                        </article>
                    }
                </div> <!-- box.// -->
            </aside> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

<!-- ========================= SECTION  ========================= -->
<!-- Phần đánh giá, nhận xét sản phẩm của khách hàng -->
<!-- Chức năng cần có: phân trang, bình luận, thu gọn bình luận hay bài đánh giá nếu nó quá dài or nhiều người bình luận -->
<section class="padding-bottom-sm mb-3">
    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Đánh giá - Nhận xét từ khách hàng</h4>
    </header>
    @if (ViewBag.EvaluateCount == 0)
    {
        <div class="d-flex justify-content-center box"><b>Chưa có đánh giá nào!</b></div>
    }
    else
    {
        foreach (var item in ViewBag.EvaluateRecord)
        {
            <div class="row box p-3">
                <div class="col-12 col-sm-12 col-md-5 col-lg-5 mb-3">
                    @{
                        var getUrlImg = item.KhachHang.Avatar.ToString().Replace("~", "../../..");
                    }
                    <p>
                        <img src="@getUrlImg" class=" rounded-circle" style="width:50px" />
                        <span class="ml-3"><b>@item.KhachHang.TenDangNhap</b></span>
                    </p>
                </div>

                <div class="col-12 col-sm-12 col-md-7 col-lg-7 mb-3">
                    <p class="mb-0">
                        @{
                            for (var i = 0; i < item.Diem; i++)
                            {
                                <span class="fa fa-star checked"></span>
                            }

                            for (var j = 0; j < 5 - item.Diem; j++)
                            {
                                <span class="fa fa-star not-checked"></span>
                            }
                        }
                        <span class="ml-3">
                            @{
                                var status = item.Diem == 5 ? "Cực kỳ hài lòng" :
                                    item.Diem == 4 ? "Hài lòng" :
                                    item.Diem == 3 ? "Bình thường" :
                                    item.Diem == 2 ? "Không hài lòng" : "Rất không hài lòng";
                            }
                            <b>@status</b>
                        </span>
                    </p>

                    <p class="text-success mb-3"><i class="fas fa-check-circle"></i> Đã mua hàng</p>

                    @item.LoiDG

                    <p class="text-muted mb-0">
                        <small>Đã đánh giá vào ngày: @item.ThoiGianDG.ToString("dd/MM/yyyy")</small>
                    </p>

                    @if (Session["IdCustomer"] != null)
                    {

                        if (Convert.ToInt32(Session["IdCustomer"]) == item.MaKH)
                        {
                            <p class="mb-0">
                                <small>
                                    <a class="text-info edit-evaluate" href="" data-evaluateId="@item.MaDG" data-toggle="modal" data-target="#editEvaluateModal">Chỉnh sửa</a>
                                </small> |
                                <small>
                                    <a class="text-info delete-evaluate" href="" data-evaluateId="@item.MaDG">Xóa</a>
                                </small>
                            </p>
                        }

                        <button type="button" id="like-btn-@item.MaDH" class="btn btn-outline-warning mt-3 like-btn" data-likeBtn="like-btn-@item.MaDH" data-prodId="@item.MaSP" data-orderId="@item.MaDH" data-cusId="@item.MaKH">
                            <span class="icon-@item.MaDH">
                                <i class="far fa-thumbs-up"></i>
                            </span>
                            Hữu ích
                            (<span class="count-@item.MaDH">@item.LuotThich</span>)
                        </button>
                        <button type="button" class="btn btn-outline-info mt-3 comment-btn">Bình luận</button>
                    }
                    else
                    {
                        <a class="btn btn-outline-warning mt-3" href="/Customer/Login">Hữu ích</a>
                        <a class="btn btn-outline-info mt-3" href="/Customer/Login">Bình luận</a>
                    }
                </div>
            </div>
        }
    }
</section>

@if (Session["IdCustomer"] != null)
{
    <section class="padding-bottom-sm">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Các sản phẩm đã xem</h4>
        </header>
        <div class="row row-sm">
            @foreach (var viewedPro in ViewBag.ViewedProducts)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div class="card card-sm card-product-grid">
                        <a href="/Product/Details/@viewedPro.MaSP" class="img-wrap">
                            @if (viewedPro.HinhAnh != null)
                            {
                                var getUrlImg = viewedPro.HinhAnh.ToString().Replace("~", "../../..");
                                <img src="@getUrlImg" class="img-fluid" alt="@viewedPro.TenSP" />
                            }
                        </a>
                        <figcaption class="info-wrap">
                            <a href="/Product/Details/@viewedPro.MaSP" class="title">@viewedPro.TenSP</a>
                            <div class="price mt-1">@String.Format("{0:0,0}", viewedPro.Gia) VNĐ</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div> <!-- col.// -->
            }
        </div> <!-- row.// -->
    </section>
}
<!-- ========================= SECTION CONTENT END// ========================= -->

